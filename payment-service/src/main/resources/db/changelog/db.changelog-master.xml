<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="marat-petrovskiy">
        <createTable tableName="payments">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="payment_amount" type="NUMERIC(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_payments_order_id" tableName="payments">
            <column name="order_id"/>
        </createIndex>

        <createIndex indexName="idx_payments_user_id" tableName="payments">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_payments_status" tableName="payments">
            <column name="status"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="payments"
                baseColumnNames="order_id"
                constraintName="fk_payments_orders"
                referencedTableName="orders"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>